  <div id="myDIV" class="modal mystyle container">

    <div class="navigation-burger">
      <div class="burger" id="burgerMenuClose">
        <div class="line"></div>
        <div class="line"></div>
      </div>
      <div class="title">
        <p>Menu</p>
      </div>
    </div>

    <a href="/"><img src="{{ directory ~ '/vice_logo.png' }}" /></a>

    <div class="menu">
      <div class="menu-links">
        <a href="/environment"><h3>Environment</h3></a>
        <a href="/music"><h3>Music</h3></a>
        <a href="/world-news"><h3>World News</h3></a>
      </div>
    </div>
  </div>

</nav>